/* miniprogram/pages/playground/playground.wxss */
.name {
  text-align: center;
  font-size: 25px;
  border-bottom-style: solid;
  border-bottom-color: black; 
  padding-bottom: 10px;
}
.key,.value,.img{
  display: inline-block; 
  vertical-align:middle;
  font-size: 20px;
  text-align: center;
}
.key{
  width: 60%;

}
.value{
  width: 20%
}
.img{
  width: 20%
}
image{
  width: 18px;
  height: 18px;
}
.create {
  width: 100%;
  position: fixed;
  bottom: 10px
}
.all {
  padding-bottom: 55px
}
.red_top {
  position: fixed;
  width: 100%;
  height: 100%;
  padding: auto;
  background-color: rgba(0,0,0,0.6);
}
canvas {
  position: fixed;
  top: 10%;
  left: 25%
}
.time{
  font-size: 25px;
  height: 26px;
  text-align: center;
  display: block;
  width: 100%;
  margin-bottom: 10px;
}
.save {
  position: fixed;
  top: 80%;
  left: 25%
}